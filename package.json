{
  "name": "rn-next-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "web:dev": "turbo run dev --filter=web",
    "web:build": "turbo run build --filter=web",
    "expo:dev": "turbo run dev --filter=expo",
    "expo:build": "turbo run build --filter=expo",
    "expo:start": "turbo run start --filter=expo",
    "expo:android": "turbo run android --filter=expo",
    "expo:ios": "turbo run ios --filter=expo",
    "expo:web": "turbo run web --filter=expo",
    "expo:build:android": "turbo run build:android --filter=expo",
    "expo:build:ios": "turbo run build:ios --filter=expo",
    "expo:build:all": "turbo run build:all --filter=expo",
    "storybook": "turbo run dev --filter=@repo/design-system",
    "storybook:build": "turbo run build-storybook --filter=@repo/design-system"
  },
  "devDependencies": {
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
